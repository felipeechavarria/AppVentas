<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewSaleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nueva Venta"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente:"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerClients"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Spinner
            android:id="@+id/spinnerProducts"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/etSaleQuantity"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:hint="Cant."
            android:inputType="number"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnAddProductToSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AÃ±adir"/>
    </LinearLayout>
    <EditText
        android:id="@+id/etDueDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Fecha Pactada de Pago (Seleccionar)"
        android:inputType="date"
        android:layout_marginBottom="16dp"
        android:focusable="false"
        android:clickable="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productos en esta Venta:"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSaleItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: $0.0"
        android:gravity="end"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnFinalizeSale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar Venta"/>
</LinearLayout>